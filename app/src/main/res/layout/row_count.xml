<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="District"
        android:layout_marginLeft="30dp"
        android:textSize="17sp"
        android:fontFamily="@font/montserrat_alternates"
        android:id="@+id/districtTv"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#0080E2"
                android:fontFamily="@font/montserrat_alternates"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/confirmedTv1"
                android:textColor="#0080E2"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_alternates"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active         "
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#04528B"
                android:fontFamily="@font/montserrat_alternates"
                />
            <TextView
                android:id="@+id/activeTv1"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="#04528B"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_alternates"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0E7504"
                android:gravity="center"
                android:text="Recovered "
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_alternates"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="#0E7504"
                android:layout_height="wrap_content"
                android:id="@+id/recoveredTv1"
                android:fontFamily="@font/montserrat_alternates"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deaths       "
                android:layout_weight="1"
                android:textColor="#FF0606"
                android:gravity="center"
                android:fontFamily="@font/montserrat_alternates"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/deathsTv"
                android:textColor="#FF0606"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_alternates"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>